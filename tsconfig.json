{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2018",
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "lib": [
      "es2018"
    ],
    "rootDir": "./src",
    "outDir": "./lib",
    "composite": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ],
  "include": [
    "./src"
  ]
}